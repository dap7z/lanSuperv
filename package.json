    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "@justjam2013/raw-socket": "^1.0.0",
    "body-parser": "^1.20.2",
    "bonjour": "^3.5.0",
